{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}


<main class="main">
            {{#tag}}
            <section class="tags-hero-section hero-section exc-canvas {{#if feature_image}} hero-section-with-bg {{/if}}">
            <div class="hero-section__content tagspage">
                <header class="hero-section__header">
                        <img class="brand-arrow" src="{{asset 'img/brand-arrow.svg'}}" alt="">
                        <h1 class="tags-title-section hero-section__title{{#if feature_image}} emphasis-dark-top {{else}} emphasis-light-top {{/if}}animate__animated animate__fadeInDown">
                            {{ name }}
                        </h1>
                </header>
                <div class="post-card-excerpt {{#if feature_image}} emphasis-dark-top {{else}} emphasis-light-top {{/if}}">
                    <p>
                    {{#if description}}
                        {{description}}
                    {{else}}
                        A collection of {{plural ../pagination.total empty='zero posts' singular='% post' plural='% posts'}}
                    {{/if}}
                    </p>
                </div>
            </div>
                {{#if feature_image}}
                <div class="hero-section__background">
                    {{!-- <div class="hero-section__background-frontlight animate__animated animate__fadeIn"></div> --}}
                <figure class="article-figure">
                    <img loading="lazy" 
                    class="responsive-picture  animate__animated animate__fadeIn"
                        srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1000w,
                                {{img_url feature_image size="xl"}} 2000w"
                        sizes="(max-width: 1000px) 400px, 800px"
                       src="{{img_url feature_image size="m"}}"
                        alt="{{title}}"
                    >
                </figure>
                </div>
                {{/if}}
            </section>
            {{/tag}}
    <div class="exc-canvas">
        <div class="tags-post-list">


    <div class="related-posts__content">
      <div class="exc-grid">
            {{#if posts}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
            {{/if}}
      </div>
    </div>

        </div>
    </div>
</main>
